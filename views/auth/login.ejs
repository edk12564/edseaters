<% layout('layouts/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1447279506476-3faec8071eee?q=80&w=1740&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D">
                <div class="card-body">
                    <h5 class="card-title mb-3">Login</h5> 
                    <form action="/login" method="POST" novalidate class="needs-validation">
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control mb-3" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="d-grid mb-3">              
                            <button class="btn btn-info">Login</button>            
                        </div>
                    </form>
                    <div class="mb-3">
                        <form action="/register" method="GET">
                            <label for="register">Don't have an account? Register here: </label>
                            <br class="mb-3">
                            <div class="d-grid mb-3">              
                                <button class="btn btn-info">Sign Up</button>            
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

